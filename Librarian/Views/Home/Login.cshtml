@{

    ViewData["Title"] = "Login";
}

<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>@ViewData["Title"] - Librarian</title>
        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <link rel="stylesheet" href="~/css/epii.min.css" />
    </head>
    <body>
        <h3>Greetings!</h3>
        <h4>The system requires you to sign-in to access it.</h4>
        @using (Html.BeginForm("Signin", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            <span>E-mail: </span>
            <input name="email" type="email" />
            <span>Password: </span>
            <input name ="password" type="password" />
            <input type="submit" value="Go"/>
        }
    </body>
</html>