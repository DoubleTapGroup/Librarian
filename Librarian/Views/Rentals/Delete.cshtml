@model Librarian.Models.Rental

@{
    Layout = "_Layout";
    ViewData["Title"] = "Delete";
}

@section ModelList
{
    <h3>Are you sure you want to delete this record?</h3>
    <div class="panel">
        <div class="panel-division">
            <div class="flex">
                <div class="ml-4">
                    @Html.DisplayNameFor(model => model.RentalDate) :
                </div>
                <div class="ml-4">
                    <b>@Html.DisplayFor(model => model.RentalDate)</b>
                </div>
            </div>
            <hr />
            <div class="flex">
                <div class="ml-4">
                    @Html.DisplayNameFor(model => model.ReturnDate) :
                </div>
                <div class="ml-4">
                    <b>@Html.DisplayFor(model => model.ReturnDate)</b>
                </div>
            </div>
        </div>
    </div>

    <form asp-action="Delete">
        <div class="flex">
            <input type="hidden" asp-for="RentalID" />
            <input type="submit" value="Delete" class="btn btn-default" />
            <button class="ml-4" type="reset">Back to List</button>
        </div>
    </form>
}