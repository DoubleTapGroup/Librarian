@model Librarian.Models.Rental

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Content
{
<div class="panel">
    <div class="panel-division">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="RentalId" />
            <div class="flex fd-c">
                <label asp-for="RentalDate"></label>
                <input asp-for="RentalDate" />
                <span asp-validation-for="RentalDate" class="text-danger"></span>
            </div>
            <div class="flex fd-c">
                <label asp-for="ReturnDate"></label>
                <input asp-for="ReturnDate" />
                <span asp-validation-for="ReturnDate" class="text-danger"></span>
            </div>
            <div class="flex fd-c">
                <label asp-for="BookId">Book</label>
                <select asp-for="BookId" asp-items="ViewBag.BookId"></select>
                <span asp-validation-for="BookId" class="text-danger"></span>
            </div>
            <div class="flex fd-c">
                <label asp-for="UserId">User</label>
                <select asp-for="UserId" asp-items="ViewBag.UserId"></select>
                <span asp-validation-for="UserId" class="text-danger"></span>
            </div>
            <input class="mb-4" type="submit" value="Save" />
        </form>
    </div>
</div>

<a asp-action="Index">Back to List</a>

}
