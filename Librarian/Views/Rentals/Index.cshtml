@model IEnumerable<Librarian.Models.Rental>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Content
{
    <div class="panel">
        <div class="panel-division">
            <a asp-action="Create"><i class="fas fa-plus"></i></a>
        </div>
        <div class="panel-division">
            <table>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.RentalDate)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ReturnDate)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Book)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.User)
                    </th>
                    <th></th>
                </tr>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.RentalDate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ReturnDate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Book.Title)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.User.Name)
                        </td>
                        <td class="flex">
                            <a class="ml-a" asp-action="Return" asp-route-id="@item.RentalId">Return</a>
                            <a class="ml-16" asp-action="Edit" asp-route-id="@item.RentalId">Edit</a>
                            <a class="ml-16" asp-action="Details" asp-route-id="@item.RentalId">Details</a>
                            <a class="ml-16" asp-action="Delete" asp-route-id="@item.RentalId">Delete</a>
                        </td>
                    </tr>
                }
            </table>
        </div>
    </div>
}