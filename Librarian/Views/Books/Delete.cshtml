@model Librarian.Models.Book

@{
    Layout = "_Layout";
    ViewData["Title"] = "Delete";
}

@section ModelList
    {
    <h3>Are you sure you want to delete this record?</h3>
    <div class="panel">
        <div class="panel-division">
            <div class="flex">
                <div class="ml-4">
                    <b>@Html.DisplayNameFor(model => model.ISBN) :</b>
                </div>
                <div class="ml-4">
                    @Html.DisplayFor(model => model.ISBN)
                </div>
            </div>
            <hr />
            <div class="flex">
                <div class="ml-4">
                    <b>@Html.DisplayNameFor(model => model.Title) :</b>
                </div>
                <div class="ml-4">
                    @Html.DisplayFor(model => model.Title)
                </div>
            </div>
            <hr />
            <div class="flex">
                <div class="ml-4">
                    <b>@Html.DisplayNameFor(model => model.AuthorID) :</b>
                </div>
                <div class="ml-4">
                    @Html.DisplayFor(model => model.AuthorID)
                </div>
            </div>
            <hr />
            <div class="flex">
                <div class="ml-4">
                    <b>@Html.DisplayNameFor(model => model.PublisherID) :</b>
                </div>
                <div class="ml-4">
                    @Html.DisplayFor(model => model.PublisherID)
                </div>
            </div>
        </div>
    </div>

    <form asp-action="Delete">
        <div class="flex">
            <input type="hidden" asp-for="RentalID" />
            <input type="submit" value="Delete" class="btn btn-default" />
            <button class="ml-4" type="reset">Back to List</button>
        </div>
    </form>
}
