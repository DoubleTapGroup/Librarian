@model Librarian.Models.Book

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Content
    {
    <div class="panel">
        <div class="panel-division">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="BookId" />
                <div class="flex fd-c">
                    <label asp-for="ISBN"></label>
                    <input asp-for="ISBN"/>
                    <span asp-validation-for="ISBN" class="text-danger"></span>
                </div>
                <div class="flex fd-c">
                    <label asp-for="Title"></label>
                    <input asp-for="Title"/>
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
                <div class="flex fd-c">
                    <label asp-for="AuthorId">Author</label>
                    <select asp-for="AuthorId" asp-items="ViewBag.AuthorId"></select>
                    <span asp-validation-for="AuthorId" class="text-danger"></span>
                </div>
                <div class="flex fd-c">
                    <label asp-for="PublisherId">Publisher</label>
                    <select asp-for="PublisherId" asp-items="ViewBag.PublisherId"></select>
                    <span asp-validation-for="PublisherId" class="text-danger"></span>
                </div>
                <input class="mb-4" type="submit" value="Save" />
            </form>
        </div>
    </div>

    <a asp-action="Index">Back to List</a>

}