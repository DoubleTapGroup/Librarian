        <div class="panel-division">
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.ISBN)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.ISBN)
                </dd>
                <hr />
                <dt>
                    @Html.DisplayNameFor(model => model.Title)
