@model Librarian.Models.Book

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section Content
{
<div class="panel">
    <div class="panel-division">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="flex fd-c">
                <label asp-for="ISBN"></label>
                <input asp-for="ISBN" />
                <span asp-validation-for="ISBN" class="text-danger"></span>
            </div>
            <div class="flex fd-c">
                <label asp-for="Title"></label>
                <input asp-for="Title" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="flex fd-c">
                <label asp-for="AuthorId">Author</label>
                <select asp-for="AuthorId" asp-items="ViewBag.AuthorId"></select>
            </div>
            <div class="flex fd-c">
                <label asp-for="PublisherId">Publisher</label>
                <select asp-for="PublisherId" asp-items="ViewBag.PublisherId"></select>
            </div>
            <div class="flex fd-c">
                <input type="submit" value="Create" />
            </div>
        </form>
    </div>
    <div class="panel-division dim">
        <a asp-action="Index">Back to List</a>
    </div>
</div>
}
